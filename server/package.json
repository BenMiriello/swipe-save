{
  "name": "comfyui-media-manager-server",
  "version": "1.0.0",
  "description": "Server for managing ComfyUI media files",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon --watch . --watch ../public --ext js,html,css,json server.js",
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "fs-extra": "^10.0.1",
    "moment": "^2.29.1",
    "node-fetch": "^2.7.0",
    "png-chunk-text": "^1.0.0",
    "png-chunks-extract": "^1.0.0"
  },
  "devDependencies": {
    "livereload": "^0.9.3",
    "nodemon": "^3.1.10",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ]
  }
}
